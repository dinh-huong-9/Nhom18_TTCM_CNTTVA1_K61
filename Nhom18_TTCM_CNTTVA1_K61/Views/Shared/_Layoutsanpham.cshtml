                    <div>
                        <p style="font-family: 'Global Serif';font-size:20px"><b>Sắp xếp</b></p>
                        <ul style="list-style: none; display: inline"> @Html.Action("TTMD", "SanPham")</ul>
                        <ul style="list-style: none; display: inline"> @Html.Action("sxtheogiact", "SanPham")</ul>
                        <ul style="list-style: none; display: inline"> @Html.Action("sxtheogiatc", "SanPham")</ul>
                    </div>
