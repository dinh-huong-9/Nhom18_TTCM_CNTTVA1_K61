            @*</select>*@
        </div>
        <div class="row" style="font-family: 'Global Serif'">
            <div class="col-lg-4 col-md-3">
                <div class="shop__sidebar">
                    <div class="sidebar__categories">
                        <div class="section-title">
                            <h5 style="font-size:16px">Bộ lọc sản phẩm</h5>
                            <p style="font-family: 'Global Serif';font-size:20px"><b>Loại sản phẩm</b></p>
                        </div>
                        <div class="categories__accordion" style="font-family: 'Global Serif'">
                            <div class="accordion" id="accordionExample">
