    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .bannersp {
        position: absolute;
        margin-left: 650px;
        top: 240px;
        font-family: 'Global Serif';
    }

        .bannersp img {
            width: 800px;
            height: 300px;
            object-fit: fill;
            margin-left: 80px;
        }
</style>
<div>
    <h1 class="bannersp"><b>SẢN PHẨM</b></h1>
    <img src="~/Pictures/san-pham/banner.png" />
</div>
<section class="shop spad">
    <div class="container">
        <h2 style="font-size: 40px; font-family: 'Global Serif';"><b>Sản Phẩm</b></h2>
