@model Nhom18_TTCM_CNTTVA1_K61.Models.LoginModel

@{
    ViewBag.Title = "Dangnhap";

}
<div class="formlogin">
    <div class="container">
        <div class="login">
            @using (Html.BeginForm("Dangnhap", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-horizontal">
                    <h1 style="margin-left: 240px; font-family: 'SVN-Athena_0'"><b>Đăng nhập</b></h1>
                    <br/>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.userMail, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.userMail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.userMail, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.password, new { htmlAttributes = new { type = "Password", @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10" style="margin-left: 250px;  ">
                            <input style="background-color: #9acd32; font-family: 'SVN-Athena_0'" type="submit" value="Đăng nhập" class="btn btn-default" />
                        </div>
                    </div>

                </div>
            }
            @ViewBag.Fail

            <div style="margin-left:400px">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>
<style>
    .formlogin {
        width: 1500px;
        height: 440px;
        /*background-color: #B7E1A3;*/
        background-image: url(../../Pictures/san-pham/banner.png);
        margin-left: 60px;
        
    }
    .login {
        background-color: #B7E1A3;
        width: 600px;
        height: 300px;
        margin-left: 200px;
    }
</style>