@model PagedList.IPagedList<Nhom18_TTCM_CNTTVA1_K61.Models.Product>

@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý sản phẩm </h2>

<p>
    <button class="btn-default">@Html.ActionLink("Thêm mới", "Create")</button>
</p>
<table class="table table-bordered">
    <tr>

        <th>
            Tên Sản Phẩm
        </th>
        <th>
            Ảnh Sản Phẩm
        </th>
        <th>
            Giá
        </th>
        <th>
            Số lượng(g)
        </th>
        <th>
            Hướng dẫn pha
        </th>
        <th>
            Ảnh dụng cụ
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Mã loại
        </th>
        <th>
            Mã thương hiệu
        </th>
        
    </tr>

    @foreach (var item in Model)
    {
<tr>

    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        <img src="@Url.Content("~/Pictures/" +item.Image)" width="50" height="50" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.quantity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Instruct)
    </td>
    <td>
        <img src="@Url.Content("~/Pictures/" +item.ImageTool)" width="50" height="50" />

    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IDcategory)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IDtrademark)
    </td>
    <td>
        @Html.ActionLink("Sửa", "Edit", new { id = item.Idproduct})|
        @Html.ActionLink("Chi tiết", "Details", new { id = item.Idproduct }) |
        @Html.ActionLink("Xoá", "Delete", new { id = item.Idproduct })
    </td>
</tr>
    }

</table>
<!-- Thêm mã phân trang -->
<br />

    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page }))

    <!-- Kết thúc -->
