@model IEnumerable<Nhom18_TTCM_CNTTVA1_K61.Models.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Quản lý Tin Tức </h2>
<p>
    <button class="btn-default">@Html.ActionLink("Thêm mới", "Create")</button>
</p>
<table class="table table-bordered">
    <tr>

        <th>
            Name Content
        </th>
        <th>
            Content
        </th>
        <th>
            Image Content
        </th>
        <th>
            Description
        </th>
        <th>
            Content2
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Namecontent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                <img src=@Url.Content("~/Pictures/tin-tuc/" + item.Imagecontent) width="50" height="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descrition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content2)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.IDcontent })|
                @Html.ActionLink("Chi tiết", "Details", new { id = item.IDcontent }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.IDcontent })
            </td>
        </tr>
    }

</table>
